{
  "name": "Mica",
  "scopeName": "source.mica",
  "fileTypes": [
    "mica"
  ],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#unicode-literals"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#types"
    },
    {
      "include": "#constants"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#function-calls"
    },
    {
      "include": "#identifiers"
    },
    {
      "include": "#punctuation"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.mica",
          "match": "//.*$"
        },
        {
          "name": "comment.block.braces.mica",
          "begin": "\\{",
          "end": "\\}",
          "patterns": [
            {
              "include": "#comments"
            }
          ]
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.mica",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.mica",
              "match": "\\\\(n|a|t|r|b|f|v|\\\\|\"|'|\\?|0)"
            },
            {
              "name": "invalid.illegal.unknown-escape.mica",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "unicode-literals": {
      "patterns": [
        {
          "name": "string.quoted.single.mica",
          "match": "'[^']'",
          "comment": "Single Unicode character literal"
        },
        {
          "name": "invalid.illegal.unicode-literal.mica",
          "match": "'([^']*)'"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.mica",
          "match": "\\b(if|then|else|while|do|leave)\\b"
        },
        {
          "name": "keyword.declaration.mica",
          "match": "\\b(const|var|imp|procedure|function|program|library|object)\\b"
        },
        {
          "name": "keyword.operator.word.mica",
          "match": "\\b(odd|mod|not|and|or|as)\\b"
        },
        {
          "name": "keyword.other.mica",
          "match": "\\b(begin|end|address|value|pointer)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.mica",
          "match": "\\b(int8|int16|int32|int64|uint8|uint16|uint32|uint64|float32|float64|unicode|bool|string)\\b"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.mica",
          "match": "\\b(true|false|MaxInt64|MinInt64|MaxInt32|MinInt32|MaxInt16|MinInt16|MaxInt8|MinInt8|MaxUInt64|MaxUInt32|MaxUInt16|MaxUInt8)\\b"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.scientific.mica",
          "match": "\\b\\d+\\.\\d+[eE][+-]?\\d+\\b",
          "comment": "Floating point with scientific notation"
        },
        {
          "name": "constant.numeric.float.mica",
          "match": "\\b\\d+\\.\\d+\\b",
          "comment": "Floating point number"
        },
        {
          "name": "constant.numeric.integer.mica",
          "match": "\\b\\d+\\b",
          "comment": "Integer literal"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.assignment.mica",
          "match": ":="
        },
        {
          "name": "keyword.operator.comparison.mica",
          "match": "(<=|>=|#|=|<|>)"
        },
        {
          "name": "keyword.operator.arithmetic.mica",
          "match": "[+\\-*/]"
        },
        {
          "name": "keyword.operator.range.mica",
          "match": "\\.\\."
        }
      ]
    },
    "function-calls": {
      "patterns": [
        {
          "name": "entity.name.function.call.builtin.mica",
          "match": "\\b(writeln|readln|write|read)\\b(?=\\s*\\()"
        },
        {
          "name": "entity.name.function.declaration.mica",
          "match": "(?<=procedure\\s+)\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        },
        {
          "name": "entity.name.function.declaration.mica",
          "match": "(?<=function\\s+)\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        },
        {
          "name": "entity.name.function.call.mica",
          "match": "(?<=call\\s+)\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "variable.other.constant.declaration.mica",
          "match": "(?<=const\\s+)\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        },
        {
          "name": "variable.other.declaration.mica",
          "match": "(?<=var\\s+)\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        },
        {
          "name": "entity.name.type.mica",
          "match": "(?<=record\\s+)\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        },
        {
          "name": "variable.other.mica",
          "match": "\\b[a-zA-Z_\\p{L}][a-zA-Z0-9_\\p{L}\\p{M}]*\\b",
          "comment": "UTF-8 identifier support"
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.terminator.statement.mica",
          "match": ";"
        },
        {
          "name": "punctuation.terminator.program.mica",
          "match": "\\."
        },
        {
          "name": "punctuation.separator.mica",
          "match": ","
        },
        {
          "name": "punctuation.separator.colon.mica",
          "match": ":"
        },
        {
          "name": "punctuation.parenthesis.begin.mica",
          "match": "\\("
        },
        {
          "name": "punctuation.parenthesis.end.mica",
          "match": "\\)"
        },
        {
          "name": "punctuation.bracket.begin.mica",
          "match": "\\["
        },
        {
          "name": "punctuation.bracket.end.mica",
          "match": "\\]"
        }
      ]
    }
  }
}